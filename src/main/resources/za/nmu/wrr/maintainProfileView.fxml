<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<TabPane xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="za.nmu.wrr.controllers.MaintainProfileController">
    <Tab text="Edit" closable="false">
        <BorderPane>
            <padding >
                <Insets left="10" right="10" top="10" bottom="10"/>
            </padding>
            <top>
                <Label text="Edit Profile" style="-fx-font-weight: bold"/>
            </top>
            <center>
                <GridPane hgap="5" vgap="5">
                    <padding >
                        <Insets left="10" right="10" top="10" bottom="10"/>
                    </padding>
                    <Label text="Housemate ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="edit_mp_housemateid" disable="true" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="edit_mp_username" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="First Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="edit_mp_firstname" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Last Name:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="edit_mp_lastname" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Phone Number:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="edit_mp_phonenumber" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Password:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <PasswordField fx:id="edit_mp_password" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <Label text="Leader" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    <CheckBox fx:id="edit_mp_leader" GridPane.rowIndex="6" GridPane.columnIndex="1" disable="true"/>
                </GridPane>
            </center>
            <bottom>
                <VBox>
                    <HBox>
                        <Button fx:id="edit_mp_edit" disable="true" text="Edit"/>
                        <Button fx:id="edit_mp_cancel" text="Cancel"/>
                        <Button fx:id="edit_mp_clear" disable="true" text="Clear"/>
                    </HBox>
                </VBox>
            </bottom>
        </BorderPane>
    </Tab>
    <Tab text="Delete" closable="false">
        <BorderPane>
            <padding >
                <Insets left="10" right="10" top="10" bottom="10"/>
            </padding>
            <top>
                <Label text="Delete Profile" style="-fx-font-weight: bold"/>
            </top>
            <center>
                <GridPane hgap="5" vgap="5">
                    <padding >
                        <Insets left="10" right="10" top="10" bottom="10"/>
                    </padding>

                    <Label text="Housemate ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="delete_mp_housemateid" disable="true" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="delete_mp_username" disable="true" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="First Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="delete_mp_firstname" disable="true" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Last Name:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="delete_mp_lastname" disable="true" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Phone Number:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="delete_mp_phonenumber" disable="true" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Password:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <PasswordField fx:id="delete_mp_password" disable="true" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <Label text="Leader" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    <CheckBox fx:id="delete_mp_leader" GridPane.rowIndex="6" GridPane.columnIndex="1" disable="true"/>
                </GridPane>
            </center>
            <bottom>
                <VBox>
                    <HBox>
                        <Button style="-fx-border-color: red; -fx-border-width: 3" fx:id="delete_mp_delete" text="Remove"/>
                        <Button fx:id="delete_mp_cancel" text="Cancel"/>
                        <Button fx:id="delete_mp_clear" disable="true" text="Clear"/>
                    </HBox>
                </VBox>
            </bottom>
        </BorderPane>
    </Tab>
</TabPane>
